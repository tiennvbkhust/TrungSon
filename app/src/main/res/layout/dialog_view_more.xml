<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:paddingTop="@dimen/dp10"
    android:paddingBottom="@dimen/dp10"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/moreFirstView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="@dimen/dp12">

            <ImageView
                android:id="@+id/moreFirstImageView"
                android:layout_width="@dimen/dp22"
                android:layout_height="@dimen/dp22" />

            <TextView
                android:id="@+id/moreFirstTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp15"
                android:textSize="@dimen/dps15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/moreSecondView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="@dimen/dp12">

            <ImageView
                android:id="@+id/moreSecondImageView"
                android:layout_width="@dimen/dp22"
                android:layout_height="@dimen/dp22" />

            <TextView
                android:id="@+id/moreSecondTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp15"
                android:textSize="@dimen/dps15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/moreThreeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="@dimen/dp12"
            android:visibility="gone">

            <ImageView
                android:id="@+id/moreThreeImageView"
                android:layout_width="@dimen/dp22"
                android:layout_height="@dimen/dp22" />

            <TextView
                android:id="@+id/moreThreeTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp15"
                android:textSize="@dimen/dps15" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
