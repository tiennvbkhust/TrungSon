<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingEnd="@dimen/dp30"
            android:focusable="true" android:focusableInTouchMode="true"
            android:paddingLeft="@dimen/dp30">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_marginRight="@dimen/dp16"
                android:layout_marginTop="@dimen/dp80"
                android:src="@drawable/splash_logo" />

            <EditText
                android:id="@+id/edtEmailPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_editext_top_round"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:defaultFocusHighlightEnabled="false"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_editext_bottom_round"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="@dimen/dp10"
                android:letterSpacing="0.04"
                android:text="Quên mật khẩu?"
                android:textColor="#5b5a5a"
                android:textSize="14sp" />

            <Button
                android:id="@+id/submit"

                style="@style/fontBold.btnLogin"
                android:text="Đăng Nhập" />

            <Button
                android:id="@+id/submitFB"

                style="@style/fontBold.btnLogin"
                android:backgroundTint="@color/blue"

                android:text="Đăng Nhập với Facebook" />

            <Button
                android:id="@+id/submitGoogle"
                style="@style/fontBold.btnLogin"
                android:backgroundTint="@color/red"
                android:text="Đăng Nhập với Google" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp25"
                android:gravity="center"
                android:text="Nếu bạn chưa có tài khoản?" />
            <TextView
                android:id="@+id/tvLinkToSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/red"
                android:text="Đăng ký tài khoản mới" />
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>