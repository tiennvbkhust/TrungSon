<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardElevation="@dimen/dp2"
    android:layout_marginBottom="@dimen/dp8"
    android:layout_marginTop="@dimen/dp8"
    android:layout_marginLeft="@dimen/dp16"
    app:cardBackgroundColor="@color/white"
    android:layout_marginRight="@dimen/dp16"
    android:id="@+id/card"

    android:foreground="?selectableItemBackground"
    android:layout_height="100dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgAgency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/dp8">

            <TextView
                android:id="@+id/tvNameAgency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="CAO HA THU O LAVA"
                android:textColor="#1a1a1c"
                android:textSize="@dimen/dps16" />

            <TextView
                android:id="@+id/tvDescriptionAgency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Mô tả: "
                android:textColor="#797c87"
                android:textSize="@dimen/dps13" />

            <TextView
                android:id="@+id/tvAddressAgency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="2.5km:"
                android:textColor="#797c87"
                android:textSize="@dimen/dps13" />
            <android.support.v7.widget.AppCompatRatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="3"
                android:id="@+id/rateAgency"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:theme="@style/rate"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
