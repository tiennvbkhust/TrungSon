<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBlack</item>
    </style>
    <style name="MapTheme" parent="AppTheme">
        <item name="colorAccent">@color/white</item>

    </style>
    <style name="DetailProductTheme" parent="AppTheme.NoActionBar">
        <item name="colorAccent">@color/red_organce</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogProgress" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="layout_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="font">
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
    </style>

    <style name="fontBold" parent="font">
        <item name="android:textStyle">bold</item>
        <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
    </style>

    <style name="fontBold.btnLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/dp10</item>
        <item name="android:layout_marginLeft">@dimen/dp10</item>
        <item name="android:layout_marginRight">@dimen/dp10</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/dp16</item>
        <item name="android:background">@drawable/login_btn_bg</item>
    </style>

    <style name="nav_layout_root_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp16</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="nav_view_selection_item">
        <item name="android:layout_width">2dp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#395838</item>
    </style>

    <style name="nav_textview_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/ic_icon</item>
        <item name="android:drawablePadding">@dimen/dp16</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/dp10</item>
        <item name="android:paddingStart">@dimen/dp16</item>
        <item name="android:paddingTop">@dimen/dp10</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#332f20</item>
    </style>

    <style name="nav_layout_badget_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:gravity">top</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="nav_text_badget_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/nav_bg_circle</item>
    </style>

    <style name="nav_textview_item.extra">
        <item name="android:drawableLeft">@drawable/ic_class_black_24dp</item>
    </style>
    <style name="rate" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#8024253d</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="profile_layout_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/dp20</item>
        <item name="android:paddingRight">@dimen/dp32</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="profile_icon_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/dp16</item>
    </style>

    <style name="profile_text_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#332f20</item>
        <item name="android:textSize">@dimen/dps14</item>
    </style>

    <style name="div_ver">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/gray</item>
    </style>


    <style name="actionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>
        <item name="actionBarSize">@dimen/actionBarSize</item>
    </style>

    <style name="customTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarTheme">@style/actionBarTheme</item>
        <item name="colorPrimary">#FFA500</item>
        <item name="actionBarSize">@dimen/actionBarSize</item>
        <item name="colorPrimaryDark">#CCa500</item>
    </style>

    <style name="sort_rad">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@drawable/selector_radio_btn</item>
        <item name="android:padding">@dimen/dp16</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="layoutTextInPutAddress">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/dp8</item>
        <item name="android:layout_marginBottom">@dimen/dp8</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <dimen name="actionBarSize">32dp</dimen>
</resources>
